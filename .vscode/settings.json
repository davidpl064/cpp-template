{
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "python.languageServer": "Pylance",
    "workbench.colorTheme": "Default Dark+",
    "python.testing.pytestArgs": [
        "."
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "python-envs.pythonProjects": [],
    "doxdocgen.generateLeadingAsterisks": true,
    "doxdocgen.casing.file": "camelCase",
    "doxdocgen.casing.parameter": "snake_case",
    "doxdocgen.generic.authorName": "David Perez Lamarca",
    "doxdocgen.generic.briefTemplate": "@brief {text}",
    "doxdocgen.useBriefTag": true,
    "doxdocgen.file.versionTag": "@version",
    "doxdocgen.file.dateFormat": "YYYY-MM-DD"
}
